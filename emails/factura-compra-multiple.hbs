{{!-- Factura de productos --}}
<!DOCTYPE html>
<html>
<head>
    <title>Factura</title>
</head>
<body>
    <h1>¡Hola, {{nombre}}!</h1>
    <p>Gracias por tu compra. Aquí tienes tu factura:</p>
    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>${{this.precio}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <hr>
    <h2>Total: ${{total}}</h2>  
    <hr>
    <h2>Gracias por tu compra. ¡Esperamos verte pronto!</h2>
</body>
</html>